<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="row">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-center mt-7">
          <h2>応募一覧</h2>
        </div>
      </div>
    </div>
    <% @subscriptions.each do |subscription| %>
    <div class="job_informations-box p-2">
      <div class="row">
        <div class="col-3">
          <% nurse = Nurse.find_by(id: subscription.nurse_id) %>
          <% if nurse.image.attached? %>
            <%= image_tag nurse.image, size: "130x90", class: "rounded-circle" %>
          <% else %>
            <%= image_tag 'no-image-nurse.jpg', size: "130x90", class: "rounded-circle" %>
          <% end %>
        </div>
       <div class="col-7">
          <%= link_to nurse.display_name(nurse), employer_nurse_path(nurse.id), class: "link-warning" %><br>
          保有資格　　<%= nurse.qualification %><br>
          現住所　　　　<%= nurse.address %><br>
          <%= subscription.created_at.strftime("%Y-%m-%d　%H:%M") %>
        </div>
      </div>
    </div>
   <% end %>
  </div>
</div>

