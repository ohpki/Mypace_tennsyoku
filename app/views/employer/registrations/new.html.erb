<div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-10">
      <div class="d-flex align-items-center justify-content-center">
        <h2>新規会員登録</h2>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "worker/shared/error_messages", resource: resource %>

          <div class="field">
          <div class="row form-group mt-2">
            <%= f.label :"病院名", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :name, placeholder: "長野", class:"form-control", autocomplete: "off" %>
          </div>
          </div>
          <div class="row form-group mt-2">
            <%= f.label :"郵便番号", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :postal_code, placeholder: "0000000", class:"form-control", autocomplete: "off" %>
          </div>
          </div>
          <div class="row form-group mt-2">
            <%= f.label :"住所", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :address, class:"form-control", autocomplete: "off" %>
          </div>
          </div>
          <div class="row form-group mt-2">
            <%= f.label :"メールアドレス", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :email, placeholder: "sample@example", class:"form-control", autocomplete: "off"  %>
          </div>
          </div>
          <div class="row form-group mt-2">
            <%= f.label :"パスワード(６文字以上)", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :password, autocomplete: "off", placeholder: "パスワードを入力", class:"form-control", autocomplete: "off"  %>
          </div>
          </div>

          <div class="row form-group mt-2">
            <%= f.label :"パスワード(確認用)", class:"col-md-4 col-form-label text-md-right fw-bold" %>
          <div class="col-md-7 px-md-0">
            <%= f.text_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
          </div>
          <div class="row d-flex align-items-center justify-content-center">
          <div class="col-md-4 px-md-0">
              <div class="actions">
                <%= f.submit "登録", class: "btn btn-secondary w-75 mt-3 m" %>
              </div>
          </div>
          </div>
            <% end %>

          </div>
      </div>
    </div>
  </div>
</div>