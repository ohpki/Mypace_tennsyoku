<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="row">
      <div class="col-lg-12">
        <div class="d-flex align-items-center justify-content-center mt-7">
          <h2>プロフィール編集</h2>
        </div>
      </div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-lg-10">
        <%= render 'layouts/errors', obj: @hospital %>
        <%= form_with model:@hospital, url: employer_hospitals_path, method: :patch, local: true do |f| %>
          <%= image_tag @hospital.get_image(250, 150), size: '300x240'%><br>
          <%= f.label :"イメージ画像" %>
          <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
        <div class="form-group">
          <%= f.label :"病院名" %>
          <%= f.text_field :name, class:"form-control" %>
          <%= f.label :"郵便番号" %>
          <%= f.text_field :postal_code, class:"form-control" %>
          <%= f.label :"住所" %>
          <%= f.text_field :address, class:"form-control" %>
          <%= f.label :"電話番号" %>
          <%= f.text_field :phone_number, class: "form-control" %>
          <%= f.label :"紹介文・備考" %><br>
          <%= f.text_area :Introduction, class: "form-control" %>
        <% if @hospital.email == "hospitalguest@example.com" %>
          <p class="text-danger font-weight-bold">※ゲストユーザーの方はプロフィールの編集、退会はできません。</p>
        <% else %>
        <div class="row align-items-center justify-content-center">
          <div class="col-lg-3 mt-4">
            <%= f.submit class: "btn btn-secondary" %>
           </div>
          <div class="col-lg-3 mt-4">
            <%= link_to "退会する", employer_hospitals_quit_path, class: "btn btn-danger" %>
        <% end %>
        <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>