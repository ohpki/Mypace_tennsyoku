 <div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-8">
      <div class="d-flex align-items-center justify-content-center">
        <h2>看護師の方　ログインページ</h2>
      </div>
      <div class="d-flex align-items-center justify-content-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "パスワード" %>
        </div>



        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-secondary w-75 mt-5" %>
          <%= link_to "ゲストログイン", worker_guest_sign_in_path, method: :post, class: "btn btn-secondary w-75 mt-3" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
