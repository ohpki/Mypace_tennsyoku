<% if nurse_signed_in? %>
  <% if job_information.favorites.find_by(nurse_id: current_nurse.id).nil? %>
    <%= link_to worker_job_information_favorites_path(job_information), method: :post, remote: true do %>
    <%= image_tag "btn-favorite1.png" %>
    <% end %>
  <% else %>
    <%= link_to worker_job_information_favorite_path(job_information, id: 1), method: :delete, remote: true do %>
      <%= image_tag "btn-favorite2.png" %>
    <% end %>
  <% end %>
<% end %>