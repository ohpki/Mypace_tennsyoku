<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="row">
      <div class="col-lg-12">
        <div class="d-flex align-items-center justify-content-center mt-7">
          <h2>プロフィール編集</h2>
        </div>
      </div>
    </div>
    <%= form_with model:@nurse, url: nurse_registration_path, method: :patch, local: true do |f| %>
    <div class="col-xs-8 col-sm-4 col-md-4">
      <%= image_tag @nurse.get_image(300, 240),class: "rounded-circle" %><br>
      <%= f.label :"イメージ画像" %>
      <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="col-xs-8 col-sm-5 col-md-6">
      <div class="form-group">
        <%= f.label :"表示名" %>
        <%= form.radio_button :nickname, 0 %>
        <%= text_field :nickname %>
        <%= form.radio_button :nickname, 1 %>
        <div class="row form-group mt-4">
          <%= f.label :"名前", class:"col-md-3 col-form-label text-md-right fw-bold" %>
          <%= f.label :"(姓)", class:"col-md-1 col-form-label text-md-right fw-bold" %>
        <div class="col-md-3 px-md-0">
          <%= f.text_field :first_name, placeholder: "長野", class:"form-control", autocomplete: "off" %>
        </div>
          <%= f.label :"(名)", class:"col-md-1 col-form-label text-md-right fw-bold" %>
        <div class="col-md-3 px-md-0">
          <%= f.text_field :last_name, placeholder: "景子", class:"form-control", autocomplete: "off"  %>
        </div>
        </div>
        <div class="row form-group mt-2">
            <%= f.label :"フリガナ", class:"col-md-3 col-form-label text-md-right fw-bold" %>
            <%= f.label :"(セイ)", class:"col-md-1 col-form-label text-md-right fw-bold" %>
          <div class="col-md-3 px-md-0">
            <%= f.text_field :first_name_kana, placeholder: "ナガノ", class:"form-control", autocomplete: "off" %>
          </div>
            <%= f.label :"(メイ)", class:"col-md-1 col-form-label text-md-right fw-bold" %>
          <div class="col-md-3 px-md-0">
            <%= f.text_field :last_name_kana, placeholder: "ケイコ", class:"form-control", autocomplete: "off" %>
          </div>
          </div>
  
        <%= f.text_field :name, class:"form-control" %>
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code, class:"form-control" %>
        <%= f.label :"住所" %>
        <%= f.text_field :address, class:"form-control" %>
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone_number, class: "form-control" %>
        <%= f.label :"紹介文・備考" %><br>
        <%= f.text_area :Introduction, class: "form-control" %>
        <div class="row">
          <div class="col-lg-6">
            <%= f.submit class: "btn btn-secondary mt-3" %>
            <% end %>
          </div>
          <div class="col-lg-6">
            <%= link_to "退会する", employer_hospitals_quit_path, class: "btn btn-danger mt-3" %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
