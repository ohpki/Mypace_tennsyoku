<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="row">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-center mt-7">
          <h2>求人情報一覧(全<%= @job_informations.count %>件)</h2>
          <div class="search_form ml-3">
            <%= form_with url: worker_job_informations_search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word %>
              <%= f.submit "検索", class: "btn btn-secondary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-11">
      <% @job_informations.each do |job_information| %>
        <div class="job_informations-box p-2">
          <div class="row">
            <div class="col-3">
              <%= image_tag job_information.hospital.get_image(150, 90) %>
            </div>
            <div class="col-7">
              <%= link_to job_information.title, worker_job_information_path(job_information), class: "link-warning" %><br>
              勤務形態　　<%= job_information.work_style %><br>
              給与　　　　<%= job_information.alarys %><br>
              住所　　　　<%= job_information.hospital.address %>
            </div>
          </div>


        </div>
      <% end %>
      <div class="d-flex align-items-center justify-content-center">
        <%= paginate @job_informations %>
      </div>
    </div>
  </div>
</div>