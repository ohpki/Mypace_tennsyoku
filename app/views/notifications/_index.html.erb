<div class="notification_btn mr-5">
  <% if notifications.where(checked: false).exists? %>
    <%= image_tag "btn-notification2.png" %>
  <% else %>
    <%= image_tag "btn-notification1.png" %>
  <% end %>
  <div class="notification_index">
    <p>通知</p>
    <% notifications.each do |notification| %>
      <% if notification.checked == false %>
        <p class="text-danger d-inline">new</p>
        <% notification.checked = true %>
        <% notification.save %>
        <% end %>
      <% if notification.action == "chat" %>
        <%= link_to notification.action_i18n, chat_room_chats_path(notification.chst_room_id), class: "text-warning" %>が届いています。0<br>
      <% elsif notification.action == "subscription" %>
        <%= link_to notification.action_i18n, "job_informations/#{notification.job_information_id}", class: "text-warning" %>が届いています。1<br>
        <% else %>
      <%= link_to notification.action_i18n, worker_hospital_path(notification.sender), class: "text-warning" %>が届いています。2<br>
      <% end %>
    <% end %>

      <%= paginate notifications %>

   </div>
</div>