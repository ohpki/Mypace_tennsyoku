<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-md-4 col-lg-3 ml-auto">
        <h2>会員病院一覧</h2>
      </div>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <%= link_to "会員看護師一覧", admin_nurses_path, class: "btn btn-secondary ml-3" %>
      </div>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <%= form_with url: admin_search_hospital_path, local: true, method: :get do |f| %>
          <%= f.text_field :word, placeholder: "ID" %>
        <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-11">
      <% @hospitals.each do |hospital| %>
        <div class="job_informations-box p-2">
          <div class="row">
            <div class="col-xs-10 col-sm-3">
              <% if hospital.image.attached? %>
                <%= image_tag hospital.image, size: "150x90" %>
              <% else %>
                <%= image_tag 'no-image-hospital.jpg', size: "150x90" %>
              <% end %>
            </div>
            <div class="col-xs-10 col-sm-7">
              <%= link_to hospital.name, admin_hospital_path(hospital), class: "link-warning" %><br>
              病院名　　<%= hospital.name %><br>
              電話番号　　　　<%= hospital.phone_number %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="d-flex align-items-center justify-content-center">
        <%= paginate @hospitals %>
      </div>
    </div>
  </div>
</div>